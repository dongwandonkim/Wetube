extends layouts/main.pug

block content
    
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video File
            input(type="file", id="file", required=true, name="file")
            input(type="text", placeholder="Title", required=true, name="title")
            textarea(placeholder="Description", required=true, name="description")
            input(type="submit", value="Upadte Video")