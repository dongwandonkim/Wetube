        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", placeholder="Current Password", name="oldPassword")
            input(type="password", placeholder="New Password", name="newPassword1")
            input(type="password", placeholder="Confirm New Password", name="newPassword2")
            input(type="submit", value="Change Password")